  <div class='blog-container'>
    <div class='blog-title-container'>
      <h1 class='blog-title'>{{{blog_title}}} - Posted on {{{creation_date}}} - By
        {{{user.username}}}</h1>
    </div>
    <div class='blog-content-container'>
      <h3 class='blog-text'>{{{blog_content}}}</h3>
    </div>
    <div class="blog-container-footer">
        <a href="/blogs/{{{blog_id}}}"><button class="view-blog-btn">View Blog</button></a>
    </div>
  </div>