<div class='post-blog-main-container'>
  <form id='blog-form'>
    <div class='blog-form-group'>
      <label for='blog-title'>What is your blog's title?</label>
      <input class='form-input' type='text' class='post-blog-title-box' id='blog-title' />
    </div>
    <div class='blog-form-group'>
      <label for='blog-content'>What is your blog's content?</label>
      <textarea class='form-input' type='text' class='post-blog-content-box' id='blog-content' form="blog-form">
      </textarea>
    </div>
    <div class='blog-form-group'>
      <button class='modal-btn' class='post-blog-btn' type='submit'>Post Blog</button>
    </div>
  </form>
</div>

