<div id='login-main-container'>
  <div class='login-signup-container'>
    <div class='login-header'>
      <h1>Login</h1>
      <p>Log in to Tech Blog</p>
    </div>
    <form id='login-form'>
      <div class='form-group'>
        <label for='user-login'>Username:</label>
        <input class='form-input' type='text' id='username-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>Password:</label>
        <input class='form-input' type='password' id='password-login' />
      </div>
      <div class='form-group'>
        <button class='modal-btn' type='submit'>Login</button>
      </div>
    </form>
    <p>
      Don't have an account? Sign up
      <a id='signup-link' href='/signup'>here.</a>
    </p>
  </div>
</div>

<!-- Modal for invalid authentication -->
<div id='myModal' class='modal'>
  <div class='modal-content'>
    <p>Unable to verify account information. Please try again.</p>
    <button class='close-modal'>Try Again</button>
  </div>
</div>

<script src='./js/login.js'></script>