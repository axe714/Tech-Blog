<div id='signup-main-container'>
  <div class='login-signup-container'>
    <div class='signup-header'>
      <h1>Signup</h1>
      <p>Signup for free to create your own blogs!</p>
    </div>
    <form id='signup-form'>
      <div class='form-group'>
        <label for='username-signup'>Username:</label>
        <input class='form-input' type='text' id='username-signup' />
      </div>
      <div class='form-group'>
        <label for='password-signup'>Password:</label>
        <input class='form-input' type='password' id='password-signup' />
      </div>
      <div class='form-group'>
        <button class='modal-btn' type='submit'>Signup</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal for authentication -->
<div id='myModal' class='modal'>
  <div class='modal-content'>
    <p id="modal-content-text"></p>
    <button class='close-modal'></button>
  </div>
</div>

<script src="./js/signup.js"></script>